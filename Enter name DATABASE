    private void btnEnterActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        var id = txtName.getText();
        
        try{
            Class.forName("com.mysql.jdbc.Driver");
            Connection conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/enter", "root", "");
            Statement stmt = conn.createStatement();
            ResultSet rs =stmt.executeQuery("select * from entername where yourName = '" +id+"'");
            
            if(rs.next()){
                JOptionPane.showMessageDialog(null, "Your name is " +id);
            }
           
        }catch(Exception e){
            System.out.println(e);
            JOptionPane.showMessageDialog(null, "Invalid Credentials");
        }
    }                                        

